<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkest_grey"
    android:id="@+id/currentSongPlayingFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:background="@drawable/shadow">

        <ImageView
            android:id="@+id/songImage"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shadow_lighter"
            android:src="@mipmap/ic_launcher_round">

        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="450dp"
        android:background="@drawable/shadow">

        <TextView
            android:id="@+id/songName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Song Name"
            android:textColor="@color/purple"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/bandName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/roboto_thin"
            android:text="Band Name"
            android:textColor="@color/purple_lightgrey" />

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shadow_lighter"
            android:progressTint="@color/lighterText_grey"
            android:thumbTint="@color/purple" />

        <TextView
            android:id="@+id/currentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"
            android:text="0:00"
            android:textColor="@color/purple" />

        <TextView
            android:id="@+id/timeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="100dp"
            android:text="/ 0:00"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/forward_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:rotation="180"
                android:src="@drawable/ic_backwardsicon"
                app:tint="@color/purple_lightgrey" />

            <ImageView
                android:id="@+id/play_button"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:src="@drawable/ic_playicon"
                app:tint="@color/purple" />

            <ImageView
                android:id="@+id/backwards_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:src="@drawable/ic_forwardicon"
                app:tint="@color/purple_lightgrey" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>