<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent_black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shadow_stroke"
        android:orientation="vertical"
        android:layout_margin="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"

            android:text="Welcome to the family!"
            android:fontFamily="@font/raleway_bold"
            android:textColor="@color/purple"
            android:textSize="40sp"
            />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="20dp"

            android:src="@drawable/complete_gif_1"
            app:loopCount="1"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"

            android:text="Now that you're all signed up, you can begin listening to hundreds of tracks provided to YOU from us!"
            android:fontFamily="@font/raleway_bold"
            android:textColor="@color/purple"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/signup_completion_button"
            android:layout_width="231dp"
            android:layout_height="56dp"

            android:layout_marginTop="70dp"

            android:layout_marginBottom="16dp"
            android:background="@drawable/custom_button_1"
            android:backgroundTint="@color/purple"

            android:layout_gravity="center"

            android:text="HELL YEAH!" />


    </LinearLayout>


</LinearLayout>