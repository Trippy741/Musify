<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:clickable="true"
    android:id="@+id/home_recyclerview_item_layout"
    android:layout_margin="15dp">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/home_recyclerview_item_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <ProgressBar
            android:id="@+id/home_recyclerview_item_progressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminateTint="@color/purple"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/home_recyclerview_item_albumName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Album Name"
        android:fontFamily="@font/raleway_bold"
        android:textAlignment="center"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/home_recyclerview_item_artistName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Artist Name"
        android:fontFamily="@font/raleway_extralight"
        android:textAlignment="center"
        android:textSize="10sp"/>

</LinearLayout>