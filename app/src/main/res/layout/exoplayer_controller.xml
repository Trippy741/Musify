<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_gravity="bottom"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView android:id="@id/exo_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:includeFontPadding="false"
            android:textColor="@color/purple"/>

        <com.google.android.exoplayer2.ui.DefaultTimeBar
            android:id="@id/exo_progress"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="26dp"
            app:played_color="@color/purple"
            app:buffered_color="@color/purple_lightgrey"
            app:unplayed_color="@color/dark_grey"
            app:scrubber_color="@color/purple"
            />

        <TextView android:id="@id/exo_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:includeFontPadding="false"
            android:textColor="@color/purple"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="4dp"
        android:orientation="horizontal">

        <!--<ImageButton android:id="@id/exo_prev"-->
        <!--style="@style/ExoMediaButton.Previous"/>-->

        <ImageButton android:id="@id/exo_rew"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_backwardsicon"
            android:backgroundTint="@color/purple"
            android:rotation="180"

            />

        <!--<ImageButton android:id="@id/exo_repeat_toggle"
            style="@style/ExoMediaButton"
            app:tint="@color/purple" />-->

        <ImageButton android:id="@id/exo_play"
            android:background="@drawable/ic_playicon"
            android:backgroundTint="@color/purple"
            android:layout_width="130dp"
            android:layout_height="130dp"/>

        <ImageButton android:id="@id/exo_pause"
            android:background="@drawable/ic_pauseicon"
            android:backgroundTint="@color/purple"
            android:layout_width="130dp"
            android:layout_height="130dp"/>

        <ImageButton android:id="@id/exo_ffwd"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_backwardsicon"
            android:backgroundTint="@color/purple"

            />

        <!--<ImageButton android:id="@id/exo_next"-->
        <!--style="@style/ExoMediaButton.Next"/>-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@drawable/gradient_list"/>



</LinearLayout>