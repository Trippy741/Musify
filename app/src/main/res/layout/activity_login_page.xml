<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkest_grey"
    android:orientation="vertical"
    tools:context=".LoginPage"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient_list"
        android:id="@+id/loginPageLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="70dp">

            <TextView
                android:id="@+id/introText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/raleway_extrabold"
                android:text="@string/loginIntroQuote"
                android:textAllCaps="true"
                android:textColor="@color/purple"
                android:textSize="48sp"

                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/introText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/raleway_extrabold"
                android:text="@string/loginIntroQuote"
                android:textAllCaps="true"
                android:textColor="@color/purple"
                android:textSize="48sp"

                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/introText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/raleway_extrabold"
                android:text="@string/loginIntroQuote"
                android:textAllCaps="true"
                android:textColor="@color/purple"
                android:textSize="48sp"

                android:layout_marginLeft="20dp"
                />

            <TextView

                android:id="@+id/introText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/raleway_extrabold"
                android:text="@string/loginIntroQuote"
                android:textAllCaps="true"
                android:textColor="@color/purple"
                android:textSize="48sp"

                app:layout_constraintVertical_bias="0.329" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailEditText"
                style="@style/purpleInputField"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Email"
                android:textColorHint="@color/purple"
                app:boxStrokeColor="@color/purple"

                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                android:layout_marginTop="10dp"

                app:startIconDrawable="@drawable/ic_mail_icon"
                app:startIconTint="@color/purple_dim"
                >

                <com.google.android.material.textfield.TextInputEditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_thin"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordEditText"
                style="@style/purpleInputField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"



                android:hint="Password"

                android:textColorHint="@color/purple"
                app:boxStrokeColor="@color/purple"

                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"

                app:startIconDrawable="@drawable/ic_lock"
                app:startIconTint="@color/purple_dim">

                <com.google.android.material.textfield.TextInputEditText
                    android:inputType="textPassword"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_thin" />

            </com.google.android.material.textfield.TextInputLayout>




            <CheckBox
                android:id="@+id/checkBox"
                style="@style/checkBoxStyle"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:buttonTint="@color/purple"
                android:fontFamily="@font/raleway_medium"
                android:text="Remember Me"
                android:textColor="@color/purple"
                android:textColorHighlight="@color/purple"

                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">


            <include
                android:id="@+id/login_button_View"
                layout="@layout/progress_button_layout"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Sign Up" />

            <ImageButton
                android:id="@+id/loginGoogleButton"
                android:layout_width="212dp"
                android:layout_height="55dp"
                android:background="@drawable/custom_button_1"
                android:backgroundTint="@color/purple"
                app:srcCompat="@drawable/ic_googlevectorlogo"
                tools:ignore="SpeakableTextPresentCheck"

                android:layout_gravity="center"

                android:layout_marginBottom="20dp"
                />


            <TextView
                android:id="@+id/signUpText"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:fontFamily="@font/raleway_medium"
                android:textAlignment="center"
                android:text="Don't have an account?"
                android:textColor="@color/purple"

                android:layout_gravity="center"
                />

        </LinearLayout>

    </LinearLayout>





</LinearLayout>