<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent_black"
    android:clickable="true"
    android:id="@+id/custom_profileConfirmPassword_bg">

    <TextView
        android:id="@+id/custom_profileConfirmPassword_title"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="352dp"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/raleway_extrabold"
        android:text="Confirm Password: "

        android:textAlignment="textStart"


        android:textAllCaps="true"
        android:textColor="@color/purple"
        android:textSize="20sp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shadow">



        <com.google.android.material.textfield.TextInputLayout
            style="@style/purpleInputField"
            android:id="@+id/custom_profileConfirmPassword_TIL"
            android:layout_gravity="center"

            android:layout_width="330dp"
            android:layout_height="wrap_content"

            android:hint="Updated Name"
            android:textColorHint="@color/purple"
            app:boxStrokeColor="@color/purple"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            app:startIconDrawable="@drawable/ic_mail_icon"
            app:startIconTint="@color/purple_dim"
            >

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple"
                android:fontFamily="@font/raleway_thin"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/custom_profileConfirmPassword_confirmButton"
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_check_mark"
                android:backgroundTint="@android:color/transparent"
                app:tint="@color/purple" />

            <ProgressBar
                android:id="@+id/custom_profileConfirmPassword_progressBar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:backgroundTint="@android:color/transparent"
                android:indeterminateTint="@color/purple"
                android:src="@drawable/ic_check_mark"
                android:visibility="invisible"
                app:tint="@color/purple" />

        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>