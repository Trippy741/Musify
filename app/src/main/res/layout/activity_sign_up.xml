<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkest_grey"
    android:orientation="vertical"
    tools:context=".sign_up">

    <LinearLayout
        android:id="@+id/signUpPageLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_list"
        android:orientation="vertical"
        android:rotation="180">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:rotation="180">

            <TextView
                android:id="@+id/signupIntroText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/raleway_extrabold"
                android:text="@string/signupIntroQuote"
                android:textAllCaps="true"
                android:textColor="@color/purple"

                android:textSize="48sp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/signup_displayName_textInputLayout"
                    style="@style/purpleInputField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"

                    android:layout_marginRight="20dp"

                    android:ems="10"
                    android:hint="Display Name"
                    android:inputType="textPassword"

                    app:endIconMode="clear_text"
                    app:endIconTint="@color/purple_dim"

                    app:counterEnabled="true"
                    app:counterMaxLength="20"
                    app:counterTextColor="@color/purple_dim"

                    android:textColorHint="@color/purple"
                    app:boxStrokeColor="@color/purple"
                    app:helperText="*Optional"
                    app:helperTextTextColor="@color/purple_dim"



                    app:startIconDrawable="@drawable/ic_profile_def"
                    app:startIconTint="@color/purple_dim">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="20"
                        android:fontFamily="@font/raleway_thin" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/signup_email_textInputLayout"
                    style="@style/purpleInputField"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="12dp"

                    android:hint="Email/Username"

                    app:endIconMode="clear_text"
                    app:endIconTint="@color/purple_dim"

                    app:errorEnabled="true"
                    app:errorIconTint="@color/red"
                    app:errorIconDrawable="@drawable/ic_error_icon"

                    android:textColorHint="@color/purple"

                    app:boxStrokeColor="@color/purple"

                    app:startIconDrawable="@drawable/ic_mail_icon"
                    app:startIconTint="@color/purple_dim">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_thin" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/signup_password_TextInputLayout"
                    style="@style/purpleInputField"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"

                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="8dp"
                    android:hint="Password"

                    android:inputType="textPassword"
                    android:minHeight="48dp"

                    android:textColorHint="@color/purple"

                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/purple_dim"

                    app:startIconDrawable="@drawable/ic_lock"
                    app:startIconTint="@color/purple_dim"
                    tools:ignore="TextContrastCheck">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_thin" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/signup_confirmPassword_textInputLayout"
                    style="@style/purpleInputField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"

                    android:ems="10"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"

                    android:minHeight="48dp"
                    android:textColorHint="@color/purple"
                    app:boxStrokeColor="@color/purple"

                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/purple_dim"

                    app:errorEnabled="true"
                    app:errorIconTint="@color/red"
                    app:errorIconDrawable="@drawable/ic_error_icon"

                    app:startIconDrawable="@drawable/ic_lock"
                    app:startIconTint="@color/purple_dim">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_thin" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <include
                android:id="@+id/signup_button_View"
                layout="@layout/progress_button_layout"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Sign Up" />



            <Button
                android:id="@+id/testProfileButton"
                android:layout_width="231dp"
                android:layout_height="56dp"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="90dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/custom_button_1"
                android:backgroundTint="@color/purple"
                android:text="TEST PROFILE" />



        </LinearLayout>

    </LinearLayout>


</LinearLayout>