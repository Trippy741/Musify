<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkest_grey"
    android:orientation="vertical"
    tools:context=".createCustomProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient_list">

        <TableLayout
            android:layout_margin="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TableRow android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_00"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/ic_launcher_round"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    android:cropToPadding="true"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_01"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/ic_launcher_round"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    android:cropToPadding="true"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_02"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/ic_launcher_round"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    android:cropToPadding="true"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    />


            </TableRow>

            <TableRow android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_10"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/ic_launcher_round"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    android:cropToPadding="true"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_11"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/ic_launcher_round"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    android:cropToPadding="true"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_12"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/ic_launcher_round"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    android:cropToPadding="true"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    />


            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How's it hangin' handsome?"
                android:fontFamily="@font/raleway_bold"
                android:textColor="@color/purple"
                android:textAlignment="textStart"
                android:textSize="40dp"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose your profile pic, or forever hold your peace!"
                android:fontFamily="@font/raleway_medium"
                android:textColor="@color/purple"
                android:textAlignment="textStart"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/signup_setProfilePic_button"
                android:layout_marginTop="30dp"
                android:layout_width="212dp"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:text="Select a profile pic"
                android:fontFamily="@font/raleway_bold"/>



        </LinearLayout>

        <TextView
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:id="@+id/signup_skip_textView"
            android:clickable="true"

            android:text="Skip"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/raleway_medium"
            android:textColor="@color/black"
            android:layout_gravity="bottom"
            android:textSize="30dp"/>

    </LinearLayout>

</LinearLayout>