<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkest_grey"
    android:orientation="vertical"
    tools:context=".createCustomProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient_list">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipChildren="true">

            <ImageView
                android:id="@+id/createProfile_glowingCircle"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerInParent="true"
                android:background="@drawable/gradient_circular_list"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/signup_profilePic_CircleImageView"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="50dp"
                android:src="@mipmap/ic_launcher_round"
                android:tint="@color/purple" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How's it hangin' handsome?"
                android:fontFamily="@font/raleway_bold"
                android:textColor="@color/purple"
                android:textAlignment="textStart"
                android:textSize="40dp"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose your profile pic, or forever hold your peace!"
                android:fontFamily="@font/raleway_medium"
                android:textColor="@color/purple"
                android:textAlignment="textStart"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/signup_setProfilePic_button"
                android:layout_marginTop="30dp"
                android:layout_width="212dp"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:text="Select a profile pic"
                android:fontFamily="@font/raleway_bold"/>



        </LinearLayout>

        <TextView
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:id="@+id/signup_skip_textView"
            android:clickable="true"

            android:text="Skip"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/raleway_medium"
            android:textColor="@color/black"
            android:layout_gravity="bottom"
            android:textSize="30dp"/>

    </LinearLayout>

</LinearLayout>