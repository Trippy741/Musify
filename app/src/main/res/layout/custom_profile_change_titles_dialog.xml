<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent_black">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow"
        android:layout_centerVertical="true">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/purpleInputField"
            android:id="@+id/custom_profileTitlesChange_editText"


            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"

            android:hint="Updated Name"
            android:textColorHint="@color/purple"
            app:boxStrokeColor="@color/purple"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            app:startIconDrawable="@drawable/ic_mail_icon"
            app:startIconTint="@color/purple_dim"
            >

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_thin"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/custom_profileTitlesChange_button"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_check_mark"
            android:backgroundTint="@android:color/transparent"
            android:layout_marginRight="10dp"
            app:tint="@color/purple" />

    </RelativeLayout>



</RelativeLayout>